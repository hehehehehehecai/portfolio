---
import { getCollection } from 'astro:content';
import { CollectionEntry, type AstroGlobal } from 'astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{project.data.title} | 项目详情</title>
  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body class="bg-neutral-950 text-white min-h-screen">
  <div class="container mx-auto px-4 py-8">
    <!-- 返回首页链接 -->
    <div class="mb-8">
      <a href="/portfolio/" class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors">
        ← 返回首页 (Back to Home)
      </a>
    </div>

    <!-- 项目标题 -->
    <h1 class="text-4xl font-bold mb-4">{project.data.title}</h1>
    
    <!-- 项目描述 -->
    <p class="text-gray-400 mb-8">{project.data.description}</p>

    <!-- 项目内容 -->
    <article class="max-w-3xl mx-auto mt-8">
      <div class="prose prose-invert prose-zinc max-w-none text-left">
        <Content />
      </div>
    </article>
  </div>
</body>
</html>